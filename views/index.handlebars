	<body class="bg-secondary">
		<div class="text-center my-5 text-light">
			<i class="fa-7x fa-brands fa-rocketchat" style="width: 100px;"></i>
			<h3 class=""> Shark Messenger</h3>
		</div>
	
		<!-- buộc toàn bộ dòng và cột phải bỏ trong class container -->
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-5">
					<div class="border p-3 rounded bg-light">
						<form action="chat.html">
							<div class="form-group">
								<i class="fas fa-user"></i>
								<label for="username">Username</label>
								<div class="input-group mb-3">
									
									<input
									style="width: 100%;"
									type="text"
									name="username"
									id="username"
									placeholder="Enter username..."
									required
								/>
								</div>
	
							</div>
							<div class="form-group">
								<i class="fa-solid fa-user-group"></i>
								<label for="room">Anothers</label>
								<div class="input-group mb-3">
									
									<select style="width: 100%;" name="room" id="room">
										<option value="Dad">Dad</option>
										<option value="Mom">Mom</option>
										<option value="Dang">Dang</option>
										<option value="Hien">Hien</option>
									</select>
								</div>
	
							</div>
							<div class="form-group">
								<button type="submit" class="btn btn-dark" style="width: 100%;">Join Chat Now</button>

							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	
	
